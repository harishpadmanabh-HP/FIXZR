<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/userlogback"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cdviewuser"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as User"
            android:textColor="#000"
            android:layout_marginLeft="130dp"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="e-mail :"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            android:textColor="#000"

            android:maxLines="1"
            android:background="@drawable/loginselection"
            android:layout_marginTop="150dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            />

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:inputType="textPassword"
            android:maxLength="10"
            android:background="@drawable/loginselection"
            android:maxLines="1"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/buttonuserlogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="305dp"
            android:text="Login"
            android:textSize="20dp"
            android:layout_marginLeft="220dp"
            android:background="@drawable/button"/>

        <Button
            android:id="@+id/userregbtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="305dp"
            android:background="@drawable/button"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:layout_marginTop="370dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="100dp"
            />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="102dp"
        android:layout_height="166dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:elevation="300dp"
        app:layout_constraintEnd_toEndOf="@+id/cdview"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userrr" />

</android.support.constraint.ConstraintLayout>